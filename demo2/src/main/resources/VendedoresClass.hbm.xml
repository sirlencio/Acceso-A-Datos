<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.VendedoresClass" table="vendedores" schema="examen">
        <property name="codigo">
            <column name="codigo" sql-type="int(2)"/>
        </property>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="apellidos">
            <column name="apellidos" sql-type="varchar(255)"/>
        </property>
        <property name="provincia">
            <column name="provincia" sql-type="int(2)"/>
        </property>
        <property name="municipio">
            <column name="municipio" sql-type="bigint(11)"/>
        </property>
        <property name="telefono">
            <column name="telefono" sql-type="varchar(9)" length="9"/>
        </property>
        <property name="fechaAlta">
            <column name="FechaAlta" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>