<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.ProvinciasClass" table="provincias" schema="examen">
        <property name="id">
            <column name="id" sql-type="int(2)"/>
        </property>
        <property name="provincia">
            <column name="provincia" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>