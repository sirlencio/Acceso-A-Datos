<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.VentasClass" table="ventas" schema="examen">
        <property name="codigo">
            <column name="codigo" sql-type="int(2)"/>
        </property>
        <property name="codvendedor">
            <column name="codvendedor" sql-type="int(2)"/>
        </property>
        <property name="importe">
            <column name="importe" sql-type="int(10)"/>
        </property>
        <property name="fechaVenta">
            <column name="fechaVenta" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>