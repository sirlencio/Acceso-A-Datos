<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.DepartamentosClass" table="departamentos" schema="ejercicio2">
        <id name="deptNo">
            <column name="dept_no" sql-type="tinyint(2)"/>
        </id>
        <property name="dnombre">
            <column name="dnombre" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="loc">
            <column name="loc" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <set name="empleadosByDeptNo" inverse="true">
            <key>
                <column name="dept_no"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.EmpleadosClass"/>
        </set>
    </class>
</hibernate-mapping>