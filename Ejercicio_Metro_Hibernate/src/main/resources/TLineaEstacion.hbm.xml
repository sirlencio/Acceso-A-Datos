<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.TLineaEstacion" table="t_LINEA_ESTACION">
        <composite-id name="id">
            <key-property name="codLinea" column="cod_linea"/>
            <key-property name="codEstacion" column="cod_estacion"/>
        </composite-id>
        <property name="orden" column="orden"/>
        <many-to-one name="tLineasByCodLinea" class="org.example.TLineas" column="cod_linea" unique="true"/>
        <many-to-one name="tEstacionesByCodEstacion" class="org.example.TEstaciones" column="cod_estacion" unique="true"/>
    </class>

</hibernate-mapping>