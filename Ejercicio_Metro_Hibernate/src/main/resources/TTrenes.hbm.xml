<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.TTrenes" table="t_trenes" schema="metro">
        <id name="codTren">
            <column name="cod_tren" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="tipo">
            <column name="tipo" sql-type="varchar(20)" length="20"/>
        </property>
        <many-to-one name="tLineasByCodLinea" class="org.example.TLineas">
            <column name="cod_linea"/>
        </many-to-one>
        <many-to-one name="tCocherasByCodCochera" class="org.example.TCocheras">
            <column name="cod_cochera"/>
        </many-to-one>
    </class>
</hibernate-mapping>