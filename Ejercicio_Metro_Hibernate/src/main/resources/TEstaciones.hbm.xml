<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.TEstaciones" table="t_estaciones" schema="metro">
        <id name="codEstacion">
            <column name="cod_estacion" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="direccion">
            <column name="direccion" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="numaccesos">
            <column name="numaccesos" sql-type="int" not-null="true"/>
        </property>
        <property name="numlineas">
            <column name="numlineas" sql-type="int" not-null="true"/>
        </property>
        <property name="numviajesdestino">
            <column name="numviajesdestino" sql-type="int" not-null="true"/>
        </property>
        <property name="numviajesprocedencia">
            <column name="numviajesprocedencia" sql-type="int" not-null="true"/>
        </property>
        <set name="tViajesByCodEstacion" inverse="true">
            <key>
                <column name="estacionorigen" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.TViajes"/>
        </set>
        <set name="tViajesByCodEstacion_0" inverse="true">
            <key>
                <column name="estaciondestino" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.TViajes"/>
        </set>
        <set name="tLineaEstacionsByCodEstacion" inverse="true">
            <key>
                <column name="cod_estacion"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.TLineaEstacion"/>
        </set>
        <set name="tAccesosByCodEstacion" inverse="true">
            <key>
                <column name="cod_estacion"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.TAccesos"/>
        </set>
    </class>
</hibernate-mapping>