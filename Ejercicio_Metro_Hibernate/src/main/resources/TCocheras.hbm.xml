<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.TCocheras" table="t_cocheras" schema="metro">
        <id name="codCochera">
            <column name="cod_cochera" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="direccion">
            <column name="direccion" sql-type="varchar(50)" length="50"/>
        </property>
        <set name="tTrenesByCodCochera" inverse="true">
            <key>
                <column name="cod_cochera"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.TTrenes"/>
        </set>
    </class>
</hibernate-mapping>